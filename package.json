{
  "name": "textTrends",
  "description": "Analyze word usage trends throughout a text",
  "main": "src/textTrendsIndex.html",
  "dependencies": {
    "jquery": "^2.1.4",
    "lodash": "^3.10.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "less": "^2.5.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "catw": "^1.0.1",
    "lessify": "^1.0.1",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "watch": "npm run watch-js & npm run watch-css",
    "watch-css": "catw -c 'lessc -' 'style/*.less' -o static/bundle.css",
    "watch-js": "watchify -d -v -t [ babelify --presets [ es2015 react ] ] js/main.js -o static/bundle.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ],
      [
        "lessify"
      ]
    ]
  }
}
